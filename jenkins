pipeline{
    agent any
    tools {
        maven 'mvn'
        jdk 'jdk'
    }
    parameters { 
        string(name: 'DEPLOY_ENV', defaultValue: 'staging', description: '') 
        choice(name: 'CHOICES', choices: ['one', 'two', 'three'], description: '')
        }
    options{
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment{
        COMPANY_CODE='PRAGRA-123'
           }
    stages{
        stage('Compile'){
            steps{
                 echo ' compile'
                 }
               }
        stage('test'){
            steps{
                echo ' test'
                }
            }
         stage('deploy'){
            steps{
                echo ' deploy'
                }
            }

    }
    post{
        success{
            slackSend channel: 'testing', message: "build for project ${BUILD_NUMBER} is successfull"
        }
        
    }

}