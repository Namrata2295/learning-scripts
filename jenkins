pipeline{
    agent any
    tools {
        maven 'mvn'
        jdk 'jdk'
    }
    options{
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment{
        COMPANY_CODE='PRAGRA-123'
           }
    stages{
        stage('Compile'){
            steps{
                 echo ' compile'
                 }
               }
        stage('test'){
            steps{
                echo ' test'
                }
            }
         stage('deploy'){
            steps{
                echo ' deploy'
                }
            }

    }
    post{
        success{
            slackSend channel: 'testing', message: "build for project ${BUILD_NUMBER} is successfull"
        }
        always{
            mail bcc: '', body: 'Hello from Jenkins', cc: 'vasu.sharma1227@gmail.com', from: '', replyTo: '', subject: "Build Status for ${JOB_NAME} is ${BUILD_NUMBER}", to: 'namratapatel2202@gmail.com'
        }
    }

}