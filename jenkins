pipeline{
    agent any
    tools {

        maven 'mvn'
        jdk 'jdk'
    }
    environment{
        COMPANY_CODE='PRAGRA-123'
           }
    stages{
        stage('Compile'){
            steps{
                 sh 'mvn compile'
                 }
               }
        stage('test'){
            steps{
                sh 'mvn test'
                }
            }
         stage('deploy'){
            steps{
                sh 'mvn deploy'
                }
            }

    }
    post{
        success{
            slackSend channel: 'devops-oct-22', message: "build for project $JOB_NAME is successfull"
        }
    }

   }